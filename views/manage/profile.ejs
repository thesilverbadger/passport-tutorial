<h1>Profile</h1>
<form action="profile" method="POST">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="email">Name</label>
      <input
        class="form-control"
        type="text"
        name="name"
        id="name"
        required
        value="<%= user.name %>"
      />
    </div>
    <div class="form-group col-md-6">
      <label for="email">Email</label>
      <input
        class="form-control"
        type="email"
        name="email"
        id="email"
        required
        value="<%= user.email %>"
      />
    </div>
  </div>
  <button class="btn btn-primary" type="submit">Update</button>
  <a href="/">Cancel</a>
</form>
